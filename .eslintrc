{
  "parser": "babel-eslint",
  "env": {
    "amd": true,
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["jest", "prettier", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "jest/expect-expect": "off"
  }
}
